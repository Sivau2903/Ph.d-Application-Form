@model Ph.d_Application_Form.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";

    var stepNames = new Dictionary<int, string>
{
        {1, "Personal Details"},
        {2, "Academic Details"},
        {3, "LasteAttended"},
        {4, "WorkExpreience"},
        {5, "References"},
        {6, "Publications & Experiences"},
        {7, "Employment & Research"},
        {8, "Questionnaire"},
        {9, "Final Submission"}
    };
}
@if (TempData["PaymentSuccess"] != null)
{
    <div class="alert alert-success shadow-sm">
        @TempData["PaymentSuccess"]
    </div>
}

<div class="container-fluid dashboard-theme">
    <div class="row">

        <!-- Sidebar -->
        <div  class="col-md-3 sidebar d-flex flex-column">
            <div class="profile-box text-center p-4">
                <img src="@Url.Content(Model.PhotoPath)" class="rounded-circle profile-img" />
                <h5 class="mt-3 text-white fw-bold">@Model.Name</h5>
            </div>

            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link active-link" href="@Url.Action("Dashboard", "Form")">
                        <i class="bi bi-house-door-fill me-2"></i> Home
                    </a>
                </li>



                <!-- Application Steps Dropdown -->
                <li class="nav-item dropdown mt-2">
                    <a class="nav-link dropdown-toggle step-link" href="#" id="stepsDropdown"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-list-check me-2"></i> Application Steps
                    </a>


                    <ul class="dropdown-menu custom-dropdown shadow-lg" aria-labelledby="stepsDropdown">
                        @if (Model.VisibleSteps != null && Model.VisibleSteps.Any())
                        {
                            foreach (var step in Model.VisibleSteps)
                            {
                                if (stepNames.ContainsKey(step))
                                {
                                    <li>
                                        <a class="dropdown-item step-item"
                                           href="javascript:void(0);"
                                           onclick="loadStepDetails(@step)">
                                            <i class="bi bi-check2-square me-2"></i> @stepNames[step]
                                        </a>
                                    </li>
                                }
                            }

                        }
                        else
                        {
                            <li><span class="dropdown-item text-muted">⚠️ No steps found</span></li>
                        }
                    </ul>
                </li>

                <li class="nav-item mt-2">
                    <a class="nav-link logout-link" href="@Url.Action("Logout", "Form")">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 p-4">
            <h3 class="fw-bold text-primary">Applicant Dashboard</h3>
            <hr />

            <div class="card shadow-lg border-0 p-4 glass-card">
                <h5 class="mb-3 text-danger fw-bold">User Details</h5>
                <p><strong>Applicant ID:</strong> @Model.ApplicantID</p>
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Email:</strong> @Model.EmailID</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>Status:</strong> @Model.Status</p>
            </div>

            <div class="mt-4">
                @if (Model.Status == "Completed")
                {
                    <div class="alert alert-success shadow-sm">
                        ✅ Your application is completed. You are allowed to pay the application fee.
                    </div>
                    <form action="@Url.Action("Payment", "Form")" method="post">
                        <button type="submit" class="btn btn-success btn-lg shadow px-4">
                            <i class="bi bi-credit-card me-2"></i> Continue with Payment
                        </button>
                    </form>
                }
                else if (Model.Status == "Inprogress")
                {
                    <div class="alert alert-warning shadow-sm">
                        ⚠️ Your application is in progress. Please complete it to proceed with payment.
                    </div>
                    <form action="@Url.Action("ContinueApplication", "Form")" method="post">
                        <button type="submit" class="btn btn-primary btn-lg shadow px-4">
                            <i class="bi bi-pencil-square me-2"></i> Continue with Application
                        </button>
                    </form>
                }
                else if (Model.Status == "ApplicationFeePaid")
                {
                    <div class="alert alert-success shadow-sm">
                        ✅ Your payment is completed. Wait for the selection process.
                    </div>
                }
            </div>
            <div id="stepDetailsContainer" class="mt-4">
                <div class="alert alert-info">ℹ️ Select a step from the dropdown to view details.</div>
            </div>

        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


@section Scripts {
    <script>
function loadStepDetails(step) {
    $.ajax({
        url: '@Url.Action("GetStepDetails", "Form")',
        type: 'GET',
        data: {
            step: step,
            applicantId: '@Model.ApplicantID'
        },
        success: function (result) {
            $('#stepDetailsContainer').html(result);
        },
        error: function () {
            $('#stepDetailsContainer').html(
                '<div class="alert alert-danger">❌ Failed to load step details.</div>'
            );
        }
    });
}

    </script>
}



