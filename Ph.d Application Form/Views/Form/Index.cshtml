@model Ph.d_Application_Form.Models.UniversitySchoolViewModel

@{
    ViewBag.Title = "Ph.D Application - ICFAI University";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(to right, #e0f7fa, #ffffff);
        font-family: 'Segoe UI', sans-serif;
    }

    .form-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 30px 15px;
    }

    .form-container {
        background-color: #fff;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        border-top: 8px solid #d32f2f;
        border-bottom: 4px solid #1976d2;
    }

    .form-title {
        font-size: 28px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
        color: #2c3e50;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    label {
        font-weight: 600;
        color: #37474f;
        display: block;
        margin-bottom: 6px;
    }

    .form-control {
        width: 75%;
        padding: 12px 14px;
        font-size: 15px;
        border-radius: 6px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #1976d2;
            outline: none;
            box-shadow: 0 0 5px rgba(25, 118, 210, 0.2);
        }

    .btn-submit {
        width: 100%;
        background-color: #1976d2;
        color: white;
        font-size: 16px;
        padding: 14px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #145ca0;
        }

    .icfai-logo {
        display: block;
        margin: 0 auto 20px;
        max-width: 120px;
    }
</style>

<div class="form-wrapper">
    <div class="form-container">
        @*<img src="https://www.icfaiuniversity.in/images/icfai-logo.png" alt="ICFAI Logo" class="icfai-logo" />*@
        <h2 class="form-title">Ph.D Application</h2>

        @using (Html.BeginForm("OpenApplicationForm", "Form", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group" style="width:720px;">
                <label for="UniversityID">Select University</label>
                @Html.DropDownListFor(m => m.UniversityID,
                    new SelectList(Model.Universities, "UniversityID", "UniversityName"),
                    "-- Select University --",
                    new { @class = "form-control", @id = "UniversityDropdown" })
            </div>

            <div class="form-group" id="SchoolContainer" style="display:none;">
                <label for="SchoolID">Select School</label>
                @Html.DropDownListFor(m => m.SchoolID,
                    Enumerable.Empty<SelectListItem>(),
                    "-- Select School --",
                    new { @class = "form-control", @id = "SchoolDropdown" })
            </div>

            <button type="submit" class="btn-submit">Proceed to Application</button>
        }
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    @section Scripts {
        <script>
            const universityData = @Html.Raw(Json.Encode(Model.SchoolData));

            $('#UniversityDropdown').on('change', function () {
                const universityId = $(this).val();
                const schools = universityData[universityId];

                if (schools && schools.length > 0) {
                    $('#SchoolDropdown').empty();
                    $('#SchoolDropdown').append(`<option value="">-- Select School --</option>`);
                    schools.forEach(s => {
                        $('#SchoolDropdown').append(`<option value="${s.SchoolID}">${s.SchoolName}</option>`);
                    });
                    $('#SchoolContainer').fadeIn(200);
                } else {
                    $('#SchoolDropdown').empty();
                    $('#SchoolContainer').fadeOut(200);
                }
            });
        </script>
    }
